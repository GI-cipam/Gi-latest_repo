<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/detail_categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_smaller"
        android:background="@drawable/bg_round_white"
        android:padding="@dimen/padding_small"
        android:text="State"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#4e4e4e"
        android:textSize="12sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/detail_stateName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_smaller"
        android:background="@drawable/bg_round_white"
        android:padding="@dimen/padding_small"
        android:text="State"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#4e4e4e"
        android:textSize="12sp"
        android:textStyle="italic" />

    </LinearLayout>
        <android.support.v7.widget.CardView
        android:id="@+id/card_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_smaller">

        <include
            android:id="@+id/childHistoryCard"
            layout="@layout/card_view_group" />

        </android.support.v7.widget.CardView>

        <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/white">

        <gov.cipam.gi.utils.WrapContentHeightViewPager
            android:id="@+id/vp_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_smaller"
            android:layout_marginEnd="@dimen/margin_smaller"/>

        <LinearLayout
            android:id="@+id/ll_dots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vp_slider"
            android:gravity="center"
            android:orientation="horizontal"/>
        </RelativeLayout>

        <android.support.v7.widget.CardView
        android:id="@+id/card_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_smaller">

        <include
            android:id="@+id/childDescCard"
            layout="@layout/card_view_group" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
        android:id="@+id/seller_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
