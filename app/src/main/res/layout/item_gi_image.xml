<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/giRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_smallest"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/image_gi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_parameter_large"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription,UnusedAttribute" />

        <View
            android:id="@+id/giItemView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_parameter_large"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/image_gradient"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/text_gi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_gi"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/padding_smaller"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:theme="@style/MediumBodyText"
            android:typeface="serif"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/progressBarGi"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="invisible" />
    </RelativeLayout>

