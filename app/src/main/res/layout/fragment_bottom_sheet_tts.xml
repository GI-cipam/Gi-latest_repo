<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_tts"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    app:behavior_hideable="false"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/padding_small"
        android:text="Customize Text to Speech"
        android:textAlignment="center"
        android:textColor="@color/md_grey_900"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/button_close_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtPitch"
        android:layout_alignParentEnd="true"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="@dimen/padding_small"
        app:srcCompat="@drawable/ic_close_dark"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txtPitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_margin="@dimen/margin_small"
        android:text="Pitch"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <SeekBar
        android:id="@+id/seekPitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPitch"
        android:max="10"
        android:padding="@dimen/padding_small"
        android:progress="5" />


    <TextView
        android:id="@+id/txtSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekPitch"
        android:layout_margin="@dimen/margin_small"
        android:text="Speed"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <SeekBar
        android:id="@+id/seekSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSpeed"
        android:max="10"
        android:padding="@dimen/padding_small"
        android:progress="5" />

    <Button
        android:id="@+id/button_settings_tts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/seekSpeed"
        android:layout_gravity="end|right"
        android:background="?selectableItemBackground"
        android:text="SAVE"
        android:textColor="@color/md_grey_800"
        tools:ignore="HardcodedText,RtlHardcoded" />
</RelativeLayout>