<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/state_preference_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/margin_smaller">

    <RelativeLayout
        android:id="@+id/relative_state_preference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <gov.cipam.gi.utils.SquareImageView
            android:id="@+id/image_state_preference"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:cropToPadding="false"
            android:scaleType="centerCrop" />

        <gov.cipam.gi.utils.SquareImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/image_gradient" />

        <TextView
            android:id="@+id/text_state_preference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_state_preference"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:padding="@dimen/padding_smaller"
            android:shadowColor="@color/black_1"
            android:shadowRadius="5"
            android:text="State"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBarStatePreference"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true" />

</RelativeLayout>