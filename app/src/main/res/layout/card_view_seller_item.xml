<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bg"
    android:layout_margin="@dimen/margin_smallest"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/card_seller_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_smaller"
            android:layout_marginEnd="@dimen/margin_smaller"
            android:layout_marginStart="@dimen/margin_smaller"
            android:layout_marginTop="@dimen/margin_smaller"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/colorPrimaryDark" />
        <View
            android:id="@+id/dividerView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/margin_smaller"
            android:layout_marginStart="@dimen/margin_smaller"
            android:background="@color/greyColor"/>

        <TextView
            android:id="@+id/card_seller_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_smaller"
            android:layout_marginEnd="@dimen/margin_smaller"
            android:layout_marginStart="@dimen/margin_smaller"
            android:layout_marginTop="@dimen/margin_smaller"
            android:fontFamily="serif"
            android:lineSpacingExtra="4sp"
            android:textColor="#1f1f1f"
            style="?attr/text_size_detail" />

        <TextView
            android:id="@+id/card_seller_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:layout_marginBottom="@dimen/margin_smaller"
            android:layout_marginEnd="@dimen/margin_smaller"
            android:layout_marginStart="@dimen/margin_smaller"
            android:linksClickable="true"
            android:text="11/12"
            android:textColorLink="@color/drawer_blue"
            android:textSize="14sp" />
    </LinearLayout>

