<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/categoryLinearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="@dimen/margin_smallest">

<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:focusable="true"
    android:clickable="true">

        <ImageView
            android:id="@+id/image_category"
            android:layout_width="@dimen/image_parameter_medium"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription"/>

        <ProgressBar
            android:id="@+id/progressBarCategoryAlternate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"/>
        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/settings"
            android:visibility="gone"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/card_name_category_alternate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/padding_smallest"
        android:textAlignment="center"
        android:textColor="#424242"
        android:textSize="14sp"
        android:theme="@style/MediumBodyText"
        android:typeface="serif" />
</LinearLayout>

