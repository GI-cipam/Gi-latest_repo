<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="9">

            <gov.cipam.gi.utils.SquareImageView
                android:id="@+id/youtubeImage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="3"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_margin="@dimen/margin_smaller"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/youtubeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/youtubeDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/youtubeTitle"
                    android:gravity="start"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                <TextView
                    android:id="@+id/youtubeDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/youtubeDesc"
                    android:gravity="start"
                    android:textSize="12sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/shareButton"
                    style="@style/OverFlowButton"
                    tools:ignore="ContentDescription"
                    android:adjustViewBounds="true"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

        </LinearLayout>

</LinearLayout>