<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/text_uniqueness_position"
            style="?attr/text_size_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_smaller"
            android:layout_marginEnd="@dimen/margin_smaller"
            android:layout_marginStart="@dimen/margin_smaller"
            android:layout_marginTop="@dimen/margin_smaller"
            android:text="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_gi_uniqueness"
            style="?attr/text_size_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_smaller"
            android:layout_marginEnd="@dimen/margin_smaller"
            android:layout_marginStart="@dimen/margin_smaller"
            android:layout_marginTop="@dimen/margin_smaller"
            android:layout_toEndOf="@id/text_uniqueness_position"
            android:fontFamily="serif"
            android:lineSpacingExtra="4sp"
            android:text="@string/long_text"
            android:textColor="#1f1f1f" />

    </RelativeLayout>
</android.support.v7.widget.CardView>